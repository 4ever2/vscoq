{
	"version": "2.0.0",
	"command": "npm",
  "tasks": [
    {
      "label": "watch",
      "command": "npm run watch",
      "type": "shell",
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "test",
      "command": "npm test",
      "type": "shell",
      "group": "test",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "test-debug",
      "command": "npm run test-debug",
      "type": "shell",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}