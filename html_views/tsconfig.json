{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out",
    "tsBuildInfoFile": "out/tsconfig.tsBuildInfoFile",
    "rootDir": "src",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "paths": {
      "@lib/*": ["../lib/src/*"],
      "@lib": ["../lib/src"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "../lib" }]
}
